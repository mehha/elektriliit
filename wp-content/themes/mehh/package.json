{
  "name": "sage",
  "private": true,
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "engines": {
    "node": ">=12.14.0"
  },
  "scripts": {
    "build": "mix",
    "build:production": "mix --production",
    "start": "mix watch",
    "hot": "mix watch --hot",
    "clear": "wp acorn optimize:clear",
    "test": "npm run lint",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint resources/scripts",
    "lint:css": "stylelint \"resources/**/*.{css,scss,vue}\"",
    "translate": "npm run translate:pot && npm run translate:js",
    "translate:pot": "wp i18n make-pot . ./resources/lang/sage.pot --ignore-domain --include=\"app,resources\"",
    "translate:js": "wp i18n make-json ./resources/lang --pretty-print"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.21.3",
    "@fancyapps/ui": "^5.0.15",
    "@tinypixelco/laravel-mix-wp-blocks": "^1.2.0",
    "@wordpress/babel-preset-default": "^7.14.0",
    "@wordpress/browserslist-config": "^5.13.0",
    "@wordpress/dependency-extraction-webpack-plugin": "^4.13.0",
    "babel-eslint": "^10.1.0",
    "bootstrap": "^5.2.3",
    "browser-sync": "^2.29.1",
    "browser-sync-webpack-plugin": "^2.3.0",
    "eslint": "^8.38.0",
    "eslint-plugin-import": "^2.27.5",
    "laravel-mix": "^6.0.49",
    "laravel-mix-copy-watched": "^3.0.0",
    "postcss": "^8.4.21",
    "postcss-pxtorem": "^6.0.0",
    "sass": "^1.61.0",
    "sass-loader": "13.2.2",
    "stylelint": "^15.4.0",
    "stylelint-config-standard-scss": "^8.0.0"
  }
}
